<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.event.EventActivity">
   <androidx.appcompat.widget.Toolbar
       android:id="@+id/toolbar_event"
       android:layout_width="match_parent"
       android:layout_height="?android:attr/actionBarSize"
       app:layout_constraintTop_toTopOf="parent"
       android:background="@color/white"
       app:navigationIcon="@drawable/btn_backarticle_selected"
       app:title="MESSAGE FROM CODI"
       app:titleTextColor="@color/goldLight">
   </androidx.appcompat.widget.Toolbar>

   <View
       android:id="@+id/line"
       android:layout_width="match_parent"
       android:layout_height="2dp"
       app:layout_constraintTop_toBottomOf="@id/toolbar_event"
       android:background="@color/goldLight"
       android:visibility="visible"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toStartOf="parent"/>

   <FrameLayout
       android:id="@+id/layout_frame"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       app:layout_constraintTop_toBottomOf="@+id/line"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>